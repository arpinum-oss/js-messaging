{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./build",
    "noEmit": true,
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2017"]
  },
  "include": ["./lib/**/*", "./examples/**/*", "./benchmarks/**/*"],
  "exclude": ["node_modules"]
}
