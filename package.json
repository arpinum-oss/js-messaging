{
  "name": "@arpinum/messaging",
  "version": "4.0.1",
  "description": "Simple message bus",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "lint": "eslint . --fix --ext .ts,.js",
    "jest": "jest --verbose",
    "testw": "jest --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "compile": "tsc",
    "test": "run-s -c compile jest lint",
    "prebuild": "rm -rf ./build",
    "build": "tsc -p ./tsconfig.prod.json",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish --tag alpha"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum-oss/js-messaging.git",
  "keywords": [
    "message",
    "bus",
    "event"
  ],
  "devDependencies": {
    "@types/jest": "26.0.21",
    "@types/node": "14.14.35",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "eslint": "7.22.0",
    "jest": "26.6.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "ts-jest": "26.5.4",
    "ts-node": "9.1.1",
    "typescript": "4.2.3"
  },
  "dependencies": {
    "@arpinum/defender": "1.0.3",
    "@arpinum/promising": "4.2.0"
  },
  "jest": {
    "preset":"ts-jest"
  }
}
