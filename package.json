{
  "name": "@arpinum/messaging",
  "version": "4.0.3",
  "description": "Simple message bus",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "lint": "eslint . --fix --ext .ts,.js",
    "jest": "jest --verbose",
    "testw": "jest --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "compile": "tsc",
    "test": "run-s -c compile jest lint",
    "prebuild": "rm -rf ./build",
    "build": "tsc -p ./tsconfig.prod.json",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum-oss/js-messaging.git",
  "keywords": [
    "message",
    "bus",
    "event"
  ],
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/node": "17.0.8",
    "@typescript-eslint/eslint-plugin": "5.9.0",
    "@typescript-eslint/parser": "5.9.0",
    "eslint": "8.6.0",
    "jest": "27.4.7",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "@arpinum/defender": "1.0.4",
    "@arpinum/promising": "4.2.1"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
