{
  "name": "@arpinum/messaging",
  "version": "4.0.3",
  "description": "Simple message bus",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "lint": "eslint . --fix --ext .ts,.js",
    "jest": "jest --verbose",
    "testw": "jest --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "compile": "tsc",
    "test": "run-s -c compile jest lint",
    "prebuild": "rm -rf ./build",
    "build": "tsc -p ./tsconfig.prod.json",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum-oss/js-messaging.git",
  "keywords": [
    "message",
    "bus",
    "event"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@arpinum/defender": "^1.0.7",
    "@arpinum/promising": "^4.2.2"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
